# Local configuration for meta-wandboard images
# Yocto Project 1.5.1 Poky distribution 10.0.1, [dora] branch
# This is a sysvinit system

ACCEPT_FSL_EULA = "1"

LICENSE_FLAGS_WHITELIST = "commercial"

IMAGE_FSTYPES_forcevariable = "tar.xz"

# Important to override DISTRO_FEATURES or by default x11 and all its dependencies
# will get built whether or not you use it in an image.
DISTRO_FEATURES = "ext2 keyboard systemd usbhost wifi ${DISTRO_FEATURES_LIBC}"
DISTRO_FEATURES_BACKFILL_CONSIDERED += "pulseaudio"

PREFERRED_PROVIDER_jpeg = "libjpeg-turbo"

BB_NUMBER_THREADS = "4"
PARALLEL_MAKE = "-j 4"

# Firmware loading is more reliable with this version of udev
PREFERRED_PROVIDER_udev = "systemd"

# the default, but make sure we still have a sysvinit system
VIRTUAL_RUNTIME_init_manager = "sysvinit"

# With the SPL bootloader, it's okay to use MACHINE=wandboard-quad
# for wandboard-quad and wandboard-dual boards.
# I'm waiting on a wandboard-solo to test.
MACHINE = "wandboard-quad"

# Using the bootloader provided in the wandboard-sdk-20131225
PREFERRED_PROVIDER_u-boot = "u-boot-wand"
PREFERRED_PROVIDER_virtual/bootloader = "u-boot-wand"

# override machine/wandboard-quad.conf to get SPL config 
UBOOT_MACHINE_forcevariable = "wandboard_config"

# wandboard has no hardware clock
MACHINE_FEATURES_BACKFILL_CONSIDERED += "rtc"

# DL_DIR = "/oe-sources"

# SSTATE_DIR = "/oe20/sstate-cache"

# TMPDIR = "/oe20/tmp-poky-dora-build"

DISTRO = "poky"

PACKAGE_CLASSES = "package_ipk"

# i686 or x86_64
# SDKMACHINE = "x86_64"

EXTRA_IMAGE_FEATURES = "debug-tweaks"

USER_CLASSES = "image-mklibs image-prelink"

PATCHRESOLVE = "noop"

CONF_VERSION = "1"

